@model Deck

<div id="newDeckOverlay" class="inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 hidden">
    <div id="newDeckDialog" class="bg-gray-200 p-6 rounded-md max-w-md flex flex-col items-center justify-center space-y-4 hidden">
        <h2 class="text-2xl font-semibold">New Deck</h2>
        <p class="py-4 text-gray-800 max-w-md text-center">Create and name a new deck and then begin assigning your Person-Object-Action images for each card.</p>
        <form id="createDeckForm" asp-controller="Deck" asp-action="CreateNewDeck" method="post" data-ajax="true" data-ajax-method="POST" data-ajax-update="#newDeckDialog">
            <div class="flex items-center space-x-2 pb-4">
                <label for="nameNewDeck" class="text-base font-medium">Deck name:</label>
                <input id="nameNewDeck" type="text" class="p-1 border border-gray-300 rounded-lg" asp-for="Name" data-val="true" data-val-required="Deck name is required." />
            </div>
            <span asp-validation-for="Name" class="text-red-600"></span>
            <div class="flex justify-center pt-4">
                <button id="createNewDeckBtn" type="submit" class="text-white bg-emerald-500 border border-emerald-300 rounded-lg px-4 py-1 mr-2">
                    Save
                </button>
                <button id="closeNewDeckBtn" type="button" class="text-white bg-zinc-500 hover:bg-zinc-400 border border-gray-300 rounded-lg px-4 py-1">
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>
